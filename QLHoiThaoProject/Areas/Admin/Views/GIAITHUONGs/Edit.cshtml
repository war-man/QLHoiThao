@model QLHoiThaoProject.Models.EFModel.GIAITHUONG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section IndexAdmin{
    Quản lý Giải thưởng
}
<div class="row">
    <ol class="breadcrumb">
        <li class="active">Cập nhật thông tin giải thưởng
    </ol>
</div><!--/.row-->

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
     
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDGT)

        <div class="form-group">
            <div class="control-label col-md-2">Tên môn thi đấu</div>
            <div class="col-md-10">
                @Html.DropDownList("IDMTD", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDMTD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Tên giải thưởng</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENGT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENGT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Giá trị giải thưởng</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GIATRIGT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GIATRIGT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn" type="submit">@Html.ActionLink("Hủy", "Index", "GIAITHUONGs")</button>
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

